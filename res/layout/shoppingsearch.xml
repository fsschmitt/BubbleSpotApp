<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <com.bubblespot.Header android:id="@+id/header"
		android:layout_width="match_parent" android:layout_height="wrap_content" />
    <TextView android:layout_height="wrap_content" android:text="Pesquisa de Shoppings" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_gravity="center" android:paddingBottom="15dp" android:paddingTop="10dp"></TextView>
    <EditText android:layout_height="wrap_content" android:bufferType="editable" android:layout_width="match_parent" android:id="@+id/pesq_nome">
        <requestFocus></requestFocus>
    </EditText>
    <Spinner android:layout_height="wrap_content" android:id="@+id/spinner" android:layout_width="match_parent" android:layout_marginBottom="10dp" android:layout_marginTop="10dp"></Spinner>
    <Button android:layout_height="wrap_content" android:layout_gravity="center" android:layout_width="wrap_content" android:id="@+id/pesquisar" android:text="Pesquisar" android:layout_marginTop="10dp"></Button>
    
</LinearLayout>
