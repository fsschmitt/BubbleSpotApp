<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:minWidth="300dp" 
  android:minHeight="200dp">
  <com.bubblespot.Header android:id="@+id/header"
		android:layout_width="match_parent" android:layout_height="wrap_content" />
    <EditText android:layout_height="wrap_content" android:bufferType="editable" android:layout_width="match_parent" android:id="@+id/pesq_nome" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
        <requestFocus></requestFocus>
    </EditText>
    <Spinner android:layout_height="wrap_content" android:id="@+id/spinner" android:layout_width="match_parent" android:layout_margin="10dp"></Spinner>
    <Button android:layout_height="wrap_content" android:layout_gravity="center" android:layout_width="wrap_content" android:id="@+id/pesquisar" android:text="Pesquisar" android:layout_marginTop="10dp"></Button>
    
</LinearLayout>
